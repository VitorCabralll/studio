rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Uploads de usuários - apenas próprios arquivos
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Modelos de agentes por workspace (produção)
    match /workspaces/{workspaceId}/models/{allPaths=**} {
      allow read, write: if request.auth != null && 
        (firestore.exists(/databases/lexai/documents/prod_workspaces/$(workspaceId)) &&
         request.auth.uid in firestore.get(/databases/lexai/documents/prod_workspaces/$(workspaceId)).data.members) ||
        (firestore.exists(/databases/lexai/documents/workspaces/$(workspaceId)) &&
         request.auth.uid in firestore.get(/databases/lexai/documents/workspaces/$(workspaceId)).data.members);
    }
    
    // Documentos gerados - apenas do usuário
    match /documents/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Anexos temporários para processamento
    match /temp/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Auto-delete após 24h via lifecycle rules
    }
    
    // Arquivos públicos (logos, etc.) - apenas leitura
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Apenas via functions
    }
  }
}
