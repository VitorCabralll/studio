rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================================================
    // REGRAS COMPLETAMENTE ABERTAS - DIAGNÓSTICO EXTREMO
    // ============================================================================
    
    // PERMITIR TUDO - SEM NENHUMA VERIFICAÇÃO
    match /{document=**} {
      allow read, write, create, delete: if true;
    }
  }
}